@model Vehicles

@{
    ViewData["Title"] = "Create";
}

<h1>Parkera</h1>

<h4>Fordon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegNo" class="control-label"></label>
                <input asp-for="RegNo" class="form-control" />
                <span asp-validation-for="RegNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleType" class="control-label">Fordonstyp</label>
                <select class="form-control" name="VehicleType" asp-items="@Html.GetEnumSelectList<VehicleType>()">
                <option selected="selected" value="">Välj typ av fordon</option>
            </select>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label">Color</label>
                <select class="form-control" name="Color" asp-items="@Html.GetEnumSelectList<Color>()">
                <option selected="selected" value="">Välj fordonets färg</option>
            </select>
            </div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfWheels" class="control-label"></label>
                <input asp-for="NoOfWheels" class="form-control" />
                <span asp-validation-for="NoOfWheels" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <input type="submit" value="Parkera" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
