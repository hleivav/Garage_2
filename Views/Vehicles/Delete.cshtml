@model Garage_2.Models.Vehicles

@{
    ViewData["Title"] = "Delete";
}

<h1>Checka ut</h1>

<h3>Är du säker på att du vill checka ut?</h3>
<div>
    <h4>Fordon</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            RegNr
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegNo)
        </dd>
        <dt class = "col-sm-2">
            Fordonstyp
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleType)
        </dd>
        <dt class = "col-sm-2">
            Färg
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            Märke
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            Modell
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Antal hjul
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoOfWheels)
        </dd>
        <dt class = "col-sm-2">
            Parkeringstid
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartkingStartAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Checka ut" class="btn btn-danger" /> 
    </form>
    <br />
        <form asp-action="VehicleReceipt">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Checka ut med Kvitto" class="btn btn-danger" /> 
    </form>
    <br />
    @*<input type="submit" asp-for="Id" asp-action=Receipt value="Kvitto" class="btn btn-danger" /> *@
    <a asp-action="Index">Tillbaka till listan</a>
</div>